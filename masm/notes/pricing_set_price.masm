use.miden_name::pricing
use.miden::note
use.std::sys

const.NOTE_INPUT_PTR=0
## Input (arguments): [letter_count, price]
begin
    push.NOTE_INPUT_PTR
    exec.note::get_inputs
    # [num_inputs, init_ptr]
    drop drop push.NOTE_INPUT_PTR
    mem_loadw
    # [INPUTS]
    drop drop 
    # [letter_count, price]
    call.pricing::set_price
    exec.sys::truncate_stack
end